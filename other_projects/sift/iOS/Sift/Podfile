source 'https://github.com/CocoaPods/Specs.git'
platform :ios, '8.0'
use_frameworks!


    pod 'SwiftyJSON', :git => 'https://github.com/SwiftyJSON/SwiftyJSON.git'
    pod 'BusyNavigationBar'

    pod 'Alamofire'
    pod 'AlamofireImage'
    pod 'CTAssetsPickerController',  '~> 3.2.0'
    pod 'ImagePickerSheetController'
    pod 'ALThreeCircleSpinner'
    
    pod "ESPullToRefresh", '~> 1.0.5'
    pod 'ImageCropView', '~> 1.0'
    pod 'JSQMessagesViewController'
    pod "SwiftDate", "~> 2.0"
    pod 'Parse'
    pod 'CKCircleMenuView'
    pod 'LNRSimpleNotifications', '~> 0.3.0'
    pod 'DGElasticPullToRefresh', '~> 1.0.3'
    pod 'SidebarOverlay', '~> 3.1.0'
    pod 'OneSignal', '~> 2.1.15'


pod 'SDWebImage'
pod 'UITextView+Placeholder'
pod 'RNCryptor'
pod 'MBProgressHUD'
pod 'IHKeyboardDismissing'
pod 'IHKeyboardAvoiding'
pod 'TPKeyboardAvoiding'
pod 'ASImageResize'
pod 'ZSWRoundedImage'
pod 'DZNEmptyDataSet'


post_install do |installer|
    installer.pods_project.targets.each do |target|
        target.build_configurations.each do |config|
            config.build_settings['SWIFT_VERSION'] = '2.3'
        end
    end
end
